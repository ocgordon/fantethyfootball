{
  "name": "fantethy-api",
  "description": "fantethy PoC",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon build/index.js",
    "build": "babel src -d build --copy-files",
    "watch": "babel src -d build --copy-files --watch",
    "migrate": "truffle migrate --network=ganache --reset",
    "fix": "npm run format && npm run lint -- --fix",
    "format": "prettier --write \"**/*.{json,css,scss,md,html,sol}\"",
    "lint": "eslint .",
    "lint:md": "markdownlint -i node_modules -i build .",
    "validate": "npm run lint && npm run lint:md && npm run lint:sol"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "eslint": "^5.15.2",
    "eslint-config-codfish": "^2.5.0",
    "lint-staged": "^8.1.3",
    "nodemon": "^1.19.1",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dapp-utils": "^1.2.2",
    "ethers": "^4.0.33",
    "express": "^4.17.1",
    "express-validation": "^1.0.2",
    "fantethy-api-ethereum": "file:truffle",
    "joi": "^14.3.1",
    "lodash": "^4.17.15",
    "mongodb": "^3.2.7",
    "openzeppelin-solidity": "2.3.0"
  }
}
